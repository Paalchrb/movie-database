<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Book</title>
    <style>
        html, body, p {
            padding: 0;
            border: 0;
            margin: 0;
        }
        body {
            display: flex;
            flex-flow: column nowrap;
            {{/* justify-content: center; */}}
            align-items: left;
            height: 100vh;
        }
        p {
            margin-left: 4rem;
            font-size: 2rem;
            color: black;
          }
        .link {
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <ul>
{{range .}}
        <li>
            {{.Title}} - 
            {{.Year}} - 
            {{.Rating}} - 
            <a href="/movies/show?id={{.ID}}">Show details</a>
            <a href="/movies/update?id={{.ID}}">update</a>  - 
            <a href="/movies/delete/process?id={{.ID}}">delete</a> 
        </li>
{{end}}
    </ul>

<p class="link"><a href="/movies/create">Insert A Movie</a></p>
</body>
</html>